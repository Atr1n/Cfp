extends layout/main

block variables
	-var title = 'Главная страница'

block head
	link(rel="stylesheet" type='text/css' href="static/css/home.css")

block content
	header.header
		.container
			.header__wrap
				.header__logo-content
					p
						|Check for patent
					span
						|Designed for 
						
						img(src="/static/images/content/logo-amazon.png", alt="Logo Amazon")
						
						|Sellers
				nav.header__nav-menu
					ul.header__menu-list
						li
							a(href="") 
								|Main
						li
							a(href="") 
								|Flow
						li
							a(href="") 
								|Benefits
						li
							a(href="") 
								|Contacts

				button.header__consult-btn
					|Get a Free Consultation

	section.info
		.container
			.info__wrap

				.info__col 
					.info__present-content
						h1.info__title
							|Patent
							span
								|Check
							|Of Your Amazon <br> Future Product
						
						p.info__text
							|Get a detailed patent and trademark check of a product <br> that you are going to sell on Amazon by an experienced <br> patent consultant.

					.info__present-content
						p.info__subtitle
							span
								|Protect yourself
							|and make sure you are not selling someone's patented invention.

						.info__cards-wrap
							.info__card
								p.info__title-card
									|Sylicon wine cap
								img.info__pic-card(src="/static/images/content/card-1.png", alt="the image is missing")
								p.info__subtitle-card
									|Active patent <br> High  risk to sell

							.info__card
								p.info__title-card
									|Shower head <br> with mineral filler
								img.info__pic-card(src="/static/images/content/card-2.png", alt="the image is missing")
								p.info__subtitle-card.info__subtitle-card_active
									|Expired patent <br> Totally safe to sell

							.info__card
								p.info__title-card
									|Full Face <br> Snorkel Mask
								img.info__pic-card(src="/static/images/content/card-3.png", alt="the image is missing")
								p.info__subtitle-card
									|Active patent <br> High  risk to sell



				.info__col 
					form.info__form-wrap(action="#" method="POST")

	section.process
		.container
			.process__wrap
				h2.process__title
					|The process we
					span
						|follow
				.process__grid-wrap
					.process__col
						.process__dot
						p.process__title-col
							|Fill in the form
						p.process__content-col
							|Fill in the form and enter the <br> product names you want to <br> check
					.process__col
						.process__dot
						p.process__title-col
							|Research 
						p.process__content-col
							|We conduct a wide and detailed <br> search and analyze similar <br> patents 
					.process__col
						.process__dot
						p.process__title-col
							|Send result
						p.process__content-col
							|We will process your request <br> and send you a reply withinone <br> working day
					.process__col
						.process__dot
						p.process__title-col
							|Answer questions
						p.process__content-col
							|If you have any questions about <br> our search, we will be happy to <br> answer them

	section.features
		.container
			.features__wrap
				h2.features__title
					|Core
					span
						|features
			.features__grid-wrap
				.features__col
					img.features__pic-col(src="/static/images/content/features-1.png", alt="the image is missing")
					p.features__title-col
						|In-depth analysis <br> of your request
					p.features__content-col 
						|We conduct an extensive research in patent registries of the US and Europe. You will receive information if product patent exists or not, as well as a list of registered trademarks in this product category.
				.features__col
					img.features__pic-col(src="/static/images/content/features-2.png", alt="the image is missing")
					p.features__title-col
						|Conducted over <br> 1000 searches
					p.features__content-col 
						|Over the past few years, we have conducted thousands of product patent and trademark checks, thereby helping our customers to make the right choice of products to launch under their own brand on Amazon.
				.features__col
					img.features__pic-col(src="/static/images/content/features-3.png", alt="the image is missing")
					p.features__title-col
						|Non-disclosure <br> agreement
					p.features__content-col 
						|We value your trust and promise not to share your data or use your requests for commercial purposes. Your requests are stored on a secure server that only our employees have access to.


	section.advantages
		.container
			.advantages__wrap
				h2.advantages__title
					|Why work with
					span
						|us
				.advantages__content
					p
						|A carefully thought-out strategy is the key to a successful business start. By launching a new product on Amazon you invest your time and financial resources. It is necessary to consider all possible pitfalls that may arise during the start-up of a new business. 
					p
						span
							|Make sure that your product is not patented
						|and you do not use hidden trademarks in the description to avoid the unfortunate blocking of the product once it is on the market. Entrust this work to professionals to minimize your risks.
				img.advantages__pic(src="/static/images/content/circle.png", alt="the image is missing")


	footer.footer
		.container
			.footer__wrap
				.footer__col.footer__company
					p
						|Check for patent
					span
						|West Trade Compass LLC 
				.footer__col.footer__address
					p
						|3422 Old Capitol Trail, Suite 107
					p
						|Wilmington, Delaware 19808
				.footer__col.footer__contact
					a(href="mailto:team@checkforpatent.com")
						|team@checkforpatent.com